<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 顶部小图标 -->
        <ImageView
            android:id="@+id/iv_top_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_logo_main_park_locator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 公园名称（居中） -->
        <TextView
            android:id="@+id/tv_park_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jansen Park"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/iv_top_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- StreetView 图片 -->
        <ImageView
            android:id="@+id/iv_street_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_park_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 1. Address 标题（黑体加粗） -->
        <TextView
            android:id="@+id/tv_title_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/iv_street_view"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Address 内容（正常字体） -->
        <TextView
            android:id="@+id/tv_content_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sherdale, Hamilton 3216, New Zealand"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_address"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 2. Hours 标题（黑体加粗） -->
        <TextView
            android:id="@+id/tv_title_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hours:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_content_address"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Hours 内容（正常字体） -->
        <TextView
            android:id="@+id/tv_content_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opening hours not available"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_hours"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 3. Current Weather 标题（黑体加粗） -->
        <TextView
            android:id="@+id/tv_title_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Weather:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_content_hours"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Current Weather 内容（正常字体） -->
        <TextView
            android:id="@+id/tv_content_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temperature 12°C, Partly cloudy"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_weather"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 评分区域 -->
        <LinearLayout
            android:id="@+id/ll_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_content_weather"
            app:layout_constraintStart_toStartOf="parent">

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.5"
                android:isIndicator="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5 stars / 438 reviews"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 评论标题 -->
        <TextView
            android:id="@+id/tv_reviews_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reviews"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/ll_rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 评论列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxHeight="300dp"
            app:layout_constraintTop_toBottomOf="@id/tv_reviews_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>